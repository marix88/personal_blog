<!DOCTYPE html>
<html lang="en">
<head>
<%- include("../partials/head"); %> 
</head>
<body>
<header>
<%- include("../partials/header"); %>
</header>
  <div class="mask mask-custom">
    <h2 class="centered">All blog posts</h2>
    <div class="d-flex flex-column justify-content-center align-items-center h-100">     
      <div class="card-group">
        <% blogs.forEach (blog => { %>
          <div class="card h-100">
            <div class="card-body">
              <h4 class="card-title"><%= blog.title %></h4>
                <p class="card-text">created at: <%= blog.createdAt %></p>
                <p>Category: <%= blog.categoryBlog %></p>
                <p><%= blog.snippet %></p>
            </div>
            <div class="card-footer text-center">
              <a href="/blog/<%= blog._id %>" class="btn btn-primary" id="readMoreBtnBlog">Read more</a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
<footer>
<%- include("../partials/footer"); %>
</footer>
<script type="module" src="/javascripts/blog.js"></script>
</body>
</script>
</html>

