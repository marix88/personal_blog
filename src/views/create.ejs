<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <div class="mask mask-custom">
      <div class="d-flex flex-column justify-content-center align-items-center h-100">
        <h1 class="text-white fw-bold">Add New Blog Post</h1>
      </div>
    </div>
  </div>
  <section id="cards" class="pt-5">
    <form 
    id="addBlogPostForm"
    enctype="multipart/form-data"
    method="POST"
    class="forms"
  > <div>
      <select id="selectCategory" class="mb-3">
        <option selected>Choose category</option>
  
        <!-- put all categories in selectCategory -->
          <option>fish</option>
          <option>boats</option>
          <option>city</option>
      </select>
      </div>
        <input
          type="text"
          id="title"
          name="title"
          class="input-text"
          placeholder="Your blog post title"
          required
        />
      <div class="mb-3">
        <input
          type="text"
          id="snippet"
          name="snippet"
          class="input-text"
          placeholder="Your blog post snippet"
        />
      </div>
      <div>
        <textarea
          id="content"
          name="content"
          placeholder="The content of your blog post"
          required
        ></textarea>
      </div class="mb-3">
      <div>
        <input type="date" name="createdAt" enabled/>
      </div>
      <div class="submit">
        <button type="submit" class="submit-btn btn-primary" name="submitPostBtn">
          SUBMIT
        </button>
      </div>
      <p id="formResponse"></p>
    </form>
  </section>
    <a href="/">See the latest blog posts</a>

    <script type="javascript" src ="../public/javascripts/newblogpost.js">
    </script>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
